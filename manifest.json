{
  "manifest_version": 3,
  "name": "Antivenom",
  "description": "Antivenom to your social media overdose",
  "version": "1.0",
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": "./images/stopwatch_64.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "./script/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "exclude_matches": ["*://*.chrome/*", "*://*.edge/*"],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "timeout.html", "timeout2.html" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}